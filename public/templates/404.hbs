<script>
    require(
            [
                /* Stylesheets */
                'css!bootstrapcss',
                'css!fontawesomecss',

                /* Scripts */
                'jquery',
                'bootstrap',
                'vanilla',

                /* Custom Stylesheet */
                'css!defaultcss'
            ], function(bootstrapCss, fontawesomeCss, jquery, bootstrap, vanillaJs) {

                var baseUrl = '{{{baseUrl}}}';
                var homeButton = vanilla.byId('gotoHome');
                var feedbackButton = vanilla.byId('gotoFeedback');

                $(document).ready(function() {

                    vanilla.onClick(homeButton, function(el) {
                        el.preventDefault();

                        document.location.href = baseUrl + '/';

                        return false;
                    });

                    vanilla.onClick(feedbackButton, function(el) {
                        el.preventDefault();

                        $.smoothScroll({
                            scrollTarget: '#footer',
                            afterScroll: function() {
                                expose.expose(document.getElementsByClassName('expose'));
                            }
                        });

                        return false;
                    });
                });
            }
    );
</script>


