<script>
    require(
            [
                /* Stylesheets */
                'css!bootstrapcss',
                'css!fontawesomecss',

                /* Scripts */
                'jquery',
                'bootstrap',
                'feedback',
                'geo',
                'smoothscroll',
                'expose',

                /* Custom Stylesheet */
                'css!defaultcss'


            ], function(bootstrapCss, fontawesomeCss, jquery, bootstrap, feedback, geo, smoothScroll, expose, defaultCss) {

                var baseUrl = '{{{baseUrl}}}';

                $(document).ready(function() {

                    $('#gotoHome').click(function() {
                        document.location.href = baseUrl + '/';
                    });

                    $('#gotoFeedback').click(function() {
                        $.smoothScroll({
                            scrollTarget: '#footer',
                            afterScroll: function() {
                                $('.expose').expose();
                            }
                        });
                    });

                    $('.fb-form').feedback(baseUrl + '/api/social/feedback');

                    $('#search-input').autocomplete();

                    $('.cg-form').checkGeodata(
                            function OnSuccess(address) {
                                document.location.href = baseUrl + '/check/' + encodeURI(address);
                            }, function OnError() {
                                // TODO: alert popup oder so hinzufügen
                                alert('Adresse nicht vorhanden');
                            });
                });
            });

</script>


