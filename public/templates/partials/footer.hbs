<script>
    require(
        [
            'expose',
            'smoothscroll',
            'feedback',
            'module.footer-newsletter'
        ],
        function(exposeJs, smoothScroll, feedbackJS, ftNewsletter) {

            var baseUrl = '{{{baseUrl}}}';
            var showFeedback = '{{showFeedback}}';
            var showNewsletter = '{{showNewsletter}}';

            var fbForm = document.getElementById('fb-form');
            var expElements = document.getElementsByClassName('expose');

            $(document).ready(function() {

                /* Enable feedback form */
                $(fbForm).feedback(baseUrl + '/api/social/feedback');


                /* Enable social buttons and newsletter popup */
                ftNewsletter.init({
                    baseUrl: baseUrl
                });

                /* Highlight feedback form */
                if(showFeedback) {
                    setTimeout( function() {
                        $.smoothScroll({
                            scrollTarget: '#footer',
                            afterScroll: function() {
                                expose.expose(expElements);
                            }
                        });
                    }, 500);
                }

                /* Show newsletter popup */
                if(showNewsletter) {
                    ftNewsletter.show();
                }

            });
        }
    );
</script>



