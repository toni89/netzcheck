<script>
    require(
            [
                /* Stylesheets */
                'css!bootstrapcss',
                'css!fontawesomecss',

                /* Scripts */
                'jquery',
                'bootstrap',
                'feedback',
                'geo',
                'smoothscroll',
                'expose',
                'rotator',

                // modules
                'module.footer-newsletter',

                /* Custom Stylesheet */
                'css!defaultcss'


            ], function(bootstrapCss, fontawesomeCss, jquery, bootstrap, feedback, geo, smoothScroll, expose, rotator, footerNewsletter, defaultCss) {

                var baseUrl = '{{{baseUrl}}}';

                $(document).ready(function() {
                    footerNewsletter.init({
                        baseUrl: baseUrl
                    });

                    $('#gotoHome').click(function() {
                        document.location.href = baseUrl + '/';
                    });

                    $('#openNewsletterModal').click(function() {
                        footerNewsletter.show();
                    });

                    $('.fb-form').feedback(baseUrl + '/api/social/feedback');

                    $('#search-input').autocomplete();

                    $('.cg-form').checkGeodata(
                            function OnSuccess(address) {
                                document.location.href = baseUrl + '/check/' + encodeURI(address);
                            }, function OnError() {
                                // TODO: alert popup oder so hinzufügen
                                alert('Adresse nicht vorhanden');
                            });
                });
            });

</script>


